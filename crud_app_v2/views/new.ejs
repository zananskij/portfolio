    <div class="container">
      <br />
      <h1 class=>Add a New Task</h1>

      <div id="form">
        <form class="col-3" action="/" method="POST">
            
            <div class="form-group">
                <label for="name">Name:</label> 
                <input type="text" class="form-control"  name="name" type="submit" value="New Task" /> 
            </div>


                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" name="date" type="submit" value="New Task" /> 
                </div>


                <div class="form-group">
                    <label for="prio">Priority:</label>
                    <input type="text" class="form-control" name="prio" type="submit" value="New Task" /> 
                </div>
                

                <div class="form-group">
                    <label for="task">Task:</label>
                    <input type="text" class="form-control" name="task" type="submit" value="New Task" />
                </div>
                
          
            <br />
            <input class="btn btn-outline-warning" type="submit" value="Add Task" />
            <a class="btn btn-outline-success" href="/">View All</a>

          </form>
        </div>
     

    </div>
