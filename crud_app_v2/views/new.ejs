    <div class="container">
      <br />
      <h1 class=>Add a New Task</h1>

      <div id="form">
        <form class="col-lg-6 col md-8 col-sm-8 col-xs-1" action="/" method="POST">
            

          <!-- Name input -->
            <div class="form-group">
                <label for="title">Title:</label> 
                <input type="text" class="form-control"  name="title" type="submit" value="..." /> 
            </div>

          <!-- Date input -->
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" name="date" type="submit" value="New Task" /> 
                </div>

            <!-- Priority input -->
                <div class="form-group">
                    <label for="prio">Priority:</label>
                    <input type="text" class="form-control" name="prio" type="submit" value="..." /> 
                </div>
                
            <!-- Task input --> 
                <div class="form-group mb-0">
                    <label for="task">Task:</label>
                    <textarea name="task" class="form-control" cols="30" rows="5" type="submit" value="..."></textarea>
                    <!-- <input type="text" class="form-control" name="task" type="submit" value="New Task" /> -->
                </div>
                
          
            <br />
            <input class="btn btn-outline-success" type="submit" value="Add Task" />
            <a class="btn btn-outline-info" href="/">View All</a>

          </form>
        </div>
     

    </div>
  </body>
</html>